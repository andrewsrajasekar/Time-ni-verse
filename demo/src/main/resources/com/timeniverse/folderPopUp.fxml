<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>


<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Label text="Create Course" textFill="#752b2b">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER">
         <children>
                <Label text="Folder Name Here" fx:id="folderNameLabel">
                </Label>

        <TextField fx:id="folderName" prefHeight="40">
        </TextField>
         </children>
      </HBox>

      <HBox alignment="CENTER" fx:id="errorHBox" visible="false">
         <children>
            <Label visible="false" text="Folder Name Already Exists" fx:id="errorMsg" style="-fx-text-fill: red;"/>
         </children>
      </HBox>

  
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="addButton" onAction="#handleAddFolder">Add Folder</Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>