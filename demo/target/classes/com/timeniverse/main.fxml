<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.*?>

<GridPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.timeniverse.mainController"  hgap="10" vgap="10">
   <columnConstraints>
      <ColumnConstraints minWidth="100" prefWidth="200"
                         maxWidth="Infinity" halignment="RIGHT">
      </ColumnConstraints>
      <ColumnConstraints minWidth="200" prefWidth="200"
                         maxWidth="Infinity" hgrow="ALWAYS">
      </ColumnConstraints>
      <ColumnConstraints minWidth="200" prefWidth="200"
                         maxWidth="Infinity">
      </ColumnConstraints>
  </columnConstraints>

   <!-- Add Header Label -->
   <Label text="Time-ni-verse" GridPane.columnIndex="0" 
   GridPane.rowIndex="0" GridPane.columnSpan="2" 
   GridPane.rowSpan="1" GridPane.halignment="CENTER" >
      <font>
         <Font name="Arial" size="24" ></Font>
      </font>
      <GridPane.margin>
         <Insets right="10" bottom="10" top="10" left="10"></Insets>
      </GridPane.margin>
   </Label>
   <Button layoutX="210.0" layoutY="178.0" mnemonicParsing="false" onAction="#switchToInputForm" text="Create Task"></Button>
   
   <!-- List of groups/classes -->
   <ListView fx:id="listView" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets left="10" right="10"></Insets>
      </GridPane.margin>
      <Label text="LIST VIEW will go here"></Label>
   </ListView>

   <!-- Assignments/Tasks will be here as a table-->
   <TableView fx:id="tableView" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets right="10"></Insets>
      </GridPane.margin>
      <!-- Remove the extra column and have equal sizes -->
      <columnResizePolicy>
         <TableView fx:constant = "CONSTRAINED_RESIZE_POLICY"/>
      </columnResizePolicy>
      <columns>
          <TableColumn text="Assignment" fx:id="task_name">
          </TableColumn>
          <TableColumn text="Description" fx:id="task_description">
          </TableColumn>
          <TableColumn text="Duration" fx:id="task_duration">
          </TableColumn>
          <TableColumn text="Deadline" fx:id="task_deadline">
          </TableColumn>
          <TableColumn text="Priority" fx:id="task_priority">
         </TableColumn>
     </columns>    
   </TableView>

   <!-- Task Detail -->
   <VBox fx:id="Detail" GridPane.columnIndex="2" GridPane.rowIndex="1" spacing="10">

   <padding>
        <Insets right="20" />
    </padding>

   <Label text="Task Name Here" style="-fx-font-weight: bold; -fx-font-size: 20;"/>

   <Label style="-fx-wrap-text: true;">Task Details Here (It's totoally fine if the text is too long for a row to hold)</Label>

   <HBox spacing="10">
      <Button>Finish</Button>
      <Button>Edit</Button>
      <Button style="-fx-background-color: red; -fx-text-fill: white;">Delete</Button>
   </HBox>

   </VBox>


</GridPane>
